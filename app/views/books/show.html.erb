<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>ISBN:</strong> <%= @book.isbn %></p>

<% if @book.available? %>
  <%= button_to "Borrow This Book", borrow_book_path(@book), method: :post %>
<% else %>
  <p><strong>Status:</strong> Borrowed</p>
  <% if @book.borrowings.find_by(user: current_user, returned_at: nil) %>
    <%= button_to "Return This Book", return_book_path(@book), method: :post %>
  <% end %>
<% end %>

<%= link_to "Back to Books", books_path %>
